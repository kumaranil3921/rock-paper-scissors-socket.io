<%- include('partials/header.ejs') %>

<body class="bodyBgColor" onload="askUserName()">
  <span class="topRight" id="username">
    Unavailable
  </span>
  <%- include('partials/users_list.ejs') %>
  <h1>Rock Paper Scissors</h1>
  <h2 id="demo">Try your luck ! </h2>
  <div id="main">
    <div class="custom-container">
      <div class="section">
        <div class="info">
          <h3>You :</h3><span id="your_score">0</span>
        </div>
        <div class="show">
          <i class="fas fa-hand-rock" id="player1_selected_option"></i>
        </div>
      </div>

      <div class="section">
        <div class="info">
          <h3 id="opponent_name">Opponent :</h3><span id="opponent_score">0</span>
        </div>
        <div class="show computer">
          <i class="fas fa-spinner" id="player2_selected_option"></i>
        </div>
      </div>
    </div>
    <h2 style="color: rgb(233, 33, 19); margin: auto;">Choose One !</h2>
    <div class="selection">
      <button class="fas fa-hand-rock" id="rock"></button>
      <button class="fas fa-hand-paper" id="paper"></button>
      <button class="fas fa-hand-scissors" id="scissors"></button>
    </div>
  </div>
  <div id="waiting">Please select user to play with him.</div>
  <%- include('partials/footer.ejs') %>