<div id="main" class="game hide-game">
  <div class="custom-container">
    <div class="section">
      <div class="info">
        <h3>You :</h3><span id="your_score">0</span>
      </div>
      <div class="show-score">
        <i class="fas fa-hand-rock" id="player1_selected_option"></i>
      </div>
    </div>

    <div class="section">
      <div class="info">
        <h3 id="opponent_name">Opponent :</h3><span id="opponent_score">0</span>
      </div>
      <div class="show-score computer">
        <i class="fas fa-spinner" id="player2_selected_option"></i>
      </div>
    </div>
  </div>
  <h3 style="color: rgb(233, 33, 19); margin: auto;">Choose One !</h3>
  <div class="selection">
    <button class="fas fa-hand-rock" id="rock"></button>
    <button class="fas fa-hand-paper" id="paper"></button>
    <button class="fas fa-hand-scissors" id="scissors"></button>
  </div>
</div>